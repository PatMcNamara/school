package diceGame.DiceText;


public class PairOfDice {
	
	Die D1 = new Die();
	Die D2 = new Die();
	
	public PairOfDice() {
		this.roll();
	}
	
	public void roll() {
		D1.roll();
		D2.roll();
	}

	public int SumOfDice() {
		return (D1.getFaceValue() + D2.getFaceValue());	
	}

	public int getD1() {
		return D1.getFaceValue();
	}

	public int getD2() {
		return D2.getFaceValue();
	}
	
}
